" vim:ft=vim

Execute(FloatermNew):
  FloatermNew
  AssertEqual 'floaterm', &filetype

Execute(FloatermNew!):
  FloatermKill!
  FloatermNew!
  AssertEqual 'floaterm', &filetype

Execute(FloatermNew with arguments):
  FloatermKill!
  FloatermNew --height=0.6 --width=0.4 --wintype=floating --name=test --position=topleft --autoclose=0 ls
  AssertEqual 'floaterm', &filetype

Execute(FloatermNew with autoclose):
  FloatermKill!
  FloatermNew --autoclose=0 ls
  AssertEqual 'floaterm', &filetype

  " FIXME
  " FloatermNew --autoclose=1 ls
  " AssertEqual '', &filetype

  " FIXME
  " FloatermNew --autoclose=2 ls
  " AssertEqual '', &filetype

Execute (Exit):
  stopinsert
  call floaterm#hide(1, 0, '')
  sleep 100m
